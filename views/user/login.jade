extends ../layout

block content
  h4 Вход
  if error
    h4(style="color: red")= error
  .container-fluid
    form.col-md-offset-2.col-md-8(action='/user/login' method='post')
      .form-group
        label(for='email') Email
        input#email.form-control(name='email', type='email', placeholder='Enter email')
      .form-group
        label(for='password') Пароль
        input#password.form-control(name='password', type='password', placeholder='Пароль')

      button.btn.btn-default(type='submit') Отправить
