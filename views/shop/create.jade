extends ../layout

block scripts
  script(src='/js/create_shop.js')

block content
  h4 Добавить магазин
  if error
    h4(style="color: red")= error
  .container-fluid
    form#create_shop.form-horizontal(action='/shop/create' method='post')
      .form-group
        label.col-md-2.col-md-offset-1.control-label Наименование
        .col-md-2
          input.form-control.shop-title(name='title', type='text')

      .form-group
        button.col-md-2.col-md-offset-1.btn.btn-success.submit-button(type='submit') Отправить
        a.col-md-2.col-md-offset-3.btn.btn-success.next-button.absent(href='/shop/create') Далее